{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "S3BucketManagement",
			"Effect": "Allow",
			"Action": "s3:*",
			"Resource": [
				"arn:aws:s3:::my-terraform-state-bucket",
				"arn:aws:s3:::my-terraform-state-bucket/*",
				"arn:aws:s3:::my-website-bucket",
				"arn:aws:s3:::my-website-bucket/*"
			]
		},
		{
			"Sid": "DynamoDBLocking",
			"Effect": "Allow",
			"Action": [
				"dynamodb:DescribeTable",
				"dynamodb:GetItem",
				"dynamodb:PutItem",
				"dynamodb:DeleteItem"
			],
			"Resource": "arn:aws:dynamodb:*:*:table/terraform-lock-table"
		},
		{
			"Sid": "CloudFrontDistribution",
			"Effect": "Allow",
			"Action": "cloudfront:*",
			"Resource": "*"
		},
		{
			"Sid": "LambdaManagement",
			"Effect": "Allow",
			"Action": "lambda:*",
			"Resource": "arn:aws:lambda:*:*:function:*"
		},
		{
			"Sid": "IAMRoleAndPolicy",
			"Effect": "Allow",
			"Action": "iam:*",
			"Resource": [
				"arn:aws:iam::*:role/gallery-manifest-lambda-role",
				"arn:aws:iam::*:role/lambda-execution-role*"
			]
		},
		{
			"Sid": "Route53HostedZone",
			"Effect": "Allow",
			"Action": "route53:*",
			"Resource": "*"
		},
		{
			"Sid": "CloudWatchLogs",
			"Effect": "Allow",
			"Action": [
				"logs:CreateLogGroup",
				"logs:CreateLogStream",
				"logs:PutLogEvents",
				"logs:DeleteLogGroup",
				"logs:DescribeLogGroups"
			],
			"Resource": "arn:aws:logs:*:*:*"
		},
		{
			"Sid": "STSGetCallerIdentity",
			"Effect": "Allow",
			"Action": [
				"sts:GetCallerIdentity"
			],
			"Resource": "*"
		},
		{
			"Sid": "ACMCertificateManagement",
			"Effect": "Allow",
			"Action": [
				"acm:RequestCertificate",
				"acm:DescribeCertificate",
				"acm:GetCertificate",
				"acm:DeleteCertificate",
				"acm:ListCertificates",
				"acm:AddTagsToCertificate",
				"acm:ListTagsForCertificate"
			],
			"Resource": "*"
		}
	]
}